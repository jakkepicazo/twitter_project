<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @tweet.user_id %>
</p>

<p>
  <strong>Photo:</strong>
  <%= @tweet.photo %>
</p>

<p>
  <strong>Retweets:</strong>
  <%= @tweet.retweets %>
</p>

<p>
  <strong>Active:</strong>
  <%= @tweet.active %>
</p>

<p>
  <%= @tweet.likes.count %>
  <%= (@tweet.likes.count) == 1 ? 'Like' : 'Likes' %> 
</p>

<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %>

<% if current_user %>    
<%= button_to 'Like', tweet_likes_path(@tweet), method: :post, disabled: !current_user %>
<% end %>